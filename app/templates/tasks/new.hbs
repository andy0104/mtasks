<h1>Create New Task</h1>
<form>
    <div class="form-group">
        <label>Title</label>
        {{input type="text" placeholder="Add title" class="form-control" value=title}}
    </div>
    <div class="form-group">
        <label>Due Date</label>
        {{input type="date" placeholder="MM/DD/YYYY" class="form-control" value=date}}
    </div>
    <div class="form-group">
        <label>Description</label>
        {{textarea placeholder="Add task description" class="form-control" value=description}}
    </div>
    <button {{action 'addTask'}} class="btn btn-primary">Submit</button>
</form>
